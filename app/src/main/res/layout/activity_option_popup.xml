<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/option_layout"
    android:layout_width="315dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:layout_marginBottom="20dp"
    android:background="@drawable/popup_option"
    >

    <Button
        android:id="@+id/btn_music_option"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="112dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/btn_on_option"
        app:layout_constraintBottom_toTopOf="@+id/btn_sound_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_sound_option"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_marginBottom="74dp"
        android:background="@drawable/btn_off_option"
        app:layout_constraintBottom_toTopOf="@+id/btn_save_option"
        app:layout_constraintEnd_toEndOf="@+id/btn_music_option"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_music_option"
        app:layout_constraintTop_toBottomOf="@+id/btn_music_option" />

    <Button
        android:id="@+id/btn_save_option"
        android:layout_width="121dp"
        android:layout_height="52dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/btn_save_option"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sound_option" />

    <Button
        android:id="@+id/btn_exit_option"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_exit_option"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
